@model Wedding
<div class="card mt-5">
    <div class="card-header bg-primary text-white">Plan Your Next Wedding</div>
    <div class="card-body">
        <form action="/wedding/create" method="post">
            <div class="form-group">
                <label>Wedder One:</label>
                <input asp-for="WedderOne" class="form-control" />
                <span asp-validation-for="WedderOne" class="text-primary"></span>
            </div>
            <div class="form-group">
                <label>Wedder Two:</label>
                <input asp-for="WedderTwo" class="form-control" />
                <span asp-validation-for="WedderTwo" class="text-primary"></span>
            </div>
            <div class="form-group">
                <label>Date:</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-primary"></span>
            </div>
            <div class="form-group">
                <label>Location:</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-primary"></span>
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-primary"></span>
            </div>
            <input type="submit" value="Add Wedding" class="btn btn-outline-primary">
        </form>
    </div>
</div>